
@model IEnumerable<Flower.Models.Table>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"><font color="#7B68EE">Table</font></h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Table" asp-action="Create" class="btn btn-outline-info">
                <i class="fa-solid fa-circle-plus"></i> &nbsp;Create New
            </a>
        </div>
    </div>
    <br/><br/>
    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped"style=" width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                   
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.Name</td>

                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a  asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-outline-info">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-outline-danger">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Catedory</p>
        }
</div>

